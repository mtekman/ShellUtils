
# Are we chrooted?
ending="\$"
texter=$txtgrn

if [ "$(awk '$5=="/" {print $1}' </proc/1/mountinfo)" != "$(awk '$5=="/" {print $1}' </proc/$$/mountinfo)" ]; then
	ending=">>"
	texter=$txtylw
fi

# Are we screened?
[ "$STY" != "" ]  && screener="[screen:$(echo $STY | awk -F'.' '{print $NF}' )]"



PROMPT_DIRTRIM=2

PS1="\
\[$screener\]\
\[$bldred\]\
\u\
\[$txtylw\]@\
\[$hostcolor\]\
\h\
\[$txtrst\]\
:\
\[$texter\]\
\w\
\[$txtrst\]\
$ending \
\[$txtrst\]"

