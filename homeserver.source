function evscpTo () {
	[ $# != 2 ] && exit
	files=$1
	dest=$2

	scp -P 1947 -o ProxyCommand="ssh $ev nc -w 1 127.0.0.1 1947" $files $(soc_login):$dest
}


function evscpFrom(){
	[ $# -lt 2 ] && exit
	filereg=$1
	destfold=$2

	scp -o ProxyCommand="ssh $ev nc $soc_login 1943" $soc_login:$filereg $destfold
}


