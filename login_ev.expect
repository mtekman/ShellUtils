#!/usr/bin/expect -f

# Connect 20 minutes at a time
# Destination tends to close connection
set timeout 1200

spawn ssh -R 1943:localhost:22 yabanci@alist.crabdance.com
send_user "connecting...\n"

#login handles cases:
#   login with keys (no user/pass)
#   user/pass
#   login with keys (first time verification)
expect {
  "> " { }
  "$ " { }
  "assword: " { 
        send "yabanci\n" 
        expect {
          "% " { }
          "$ " { }
        }
  }
  "(yes/no)? " { 
        send "yes\n"
        expect {
          "% " { }
          "$ " { }
          "assword: " { 
             send "yabanci\n" 
             expect {
               "% " { }
               "$ " { }
             }
          }
        }
  }
  default {
        send_user "Login failed\n"
        exit
  }
}

expect {
	"%" {}
	timeout { exit }
	eof { exit }
}

exit
