#!/bin/bash
#
#  Git update scripts
#

# Sets temp varaiables that only exist for the same bash session

#alias git="git --ignore-submodules=dirty"
alias gpu="git push -u"
alias gpull="git pull"

alias gcomm="git commit -m"
alias gpuom="gpu origin master"

function gstat {

	cd $git_loc

	base=`pwd`;
	for f in `find -L ./ -name ".git"`;do 
		cd $f/..;

		stat=`echo $(git status) | grep -v nothing`;
		[ "$stat" != "" ]\
		&& echo -e "\n--> `dirname $f`:\n" \
		&& git status;

		cd $base;
	done
}
